@import '../icons/css/fontello.css'
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap')

*
  box-sizing border-box

html
  margin 0

body
  font-family 'Roboto', sans-serif
  padding 1rem

  @media screen
    background-color #f0f0f0

article
  background-color white
  margin 0 auto
  max-width 768px

  @media screen
    box-shadow 0px 0px 1rem .25rem rgba(0, 0, 0, 20%)
    padding 1rem

h1, h2, h3, h4, h5, h6
  font-weight normal
  font-size 1rem
  font-variant small-caps
  margin 0

.line
  display flex
  justify-content space-between
  flex-wrap wrap
  margin-bottom 1.5rem
  gap .5rem

.s-head
  .title
    font-size 1.75rem
    margin-bottom -.5rem
    font-weight bold

  .subtitle
    margin-top .375rem
    font-weight bold

.subtitle-line-1
  display flex
  align-items center
  gap 1rem

  .text
    display inline

  .sticker
    display inline
    font-size 75%
    color gray

.subtitle-line-2
  font-style italic

.contact
  display flex
  flex-wrap nowrap
  align-items center

  .icon:before
    font-size 120%
    opacity .8

  a
    color inherit
    text-decoration none

  a:hover
    text-decoration underline

ul
  margin 0
  padding 0
  list-style-type none

  & > li:before
    content '-'
    padding-left .5rem
    padding-right .5rem

  .s-want
    & > li
      padding-left 1rem

.s-want
  display flex
  align-items center

  .title
    font-weight bold

.s-tech
  display flex
  align-items center
  font-size .75rem

  .title
    font-size 1.6rem
    text-transform uppercase
    transform rotate(-85deg)
    margin-left -3rem
    margin-right -2rem
    font-weight 900
    color #e2e2e2

  .tech
    display grid
    margin-left .5rem

  .header
    grid-column 1
    padding-right .25rem
    padding-top .375rem
  .item-title
    grid-column 1
    padding-right .25rem
    margin-left .5rem
  .item-desc
    grid-column 2

.s-content
  display grid
  grid-template-columns auto 1fr auto
  margin-top -1rem

  a
    color inherit
    font-weight bold
    text-decoration none

  a:hover
    text-decoration underline
    text-underline-offset .05em

  .header
    grid-column 1 / 3
    padding-right .25rem
  .header-title
    display inline
    font-weight bold
  .header-url
    display inline
    padding-left .5rem
    &:before
      content '/'
      padding-right .5rem
  .header-date
    grid-column 3
    font-size .75rem
    font-style italic
  .item-title
    grid-column 1
    padding-right .25rem
    margin-left .5rem
  .item-desc
    grid-column 2 / 4
  .text
    padding-top .5rem
    grid-column 1 / 4
  ul
    grid-column 1 / 4
  .header
  .header-date
    padding-top 1.5rem

  &:not(.tech) .item-title
    color gray
    margin-left 1rem
    padding-right 1rem

  &:not(.tech)
    .text
      font-style italic
      margin-left 1rem
      margin-right 1rem

    .text-full
      margin-top 1rem
      margin-left 0

.s-block
  width 100%
  margin-top 1rem

  .title
    display block
    font-size 1.25rem
    font-weight bold
    padding-bottom .25rem
    border-bottom 2px solid black
